@{
    Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Clients</h2>
@if (Model.Count == 0)
{
    <h3>No Clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
    <li>@Html.ActionLink($"{ client.Name }", "Details", new { id = client.Id })</li>
}

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Back to Stylists Lists", "Index", "Stylists")</p>
