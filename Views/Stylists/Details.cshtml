  

@{
    Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<ul>
<h3>Name of Stylist: @Html.DisplayFor(model => model.Name)</h3>
<br>
@if (@Model.Clients.Count == 0)
{
    <p> @Html.DisplayFor(model => model.Name) Doesn't have any clients at the moment</p>
}

@foreach (Client client in @Model.Clients)
{
    <li> @client.Name</li>
}


<br>
<h4>@Html.ActionLink($" List of all Clients", "Index", "Clients")</h3>
<h4>@Html.ActionLink("List of all Stylists", "Index")</p>

<h4>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
